normalize-css()

body
  background-color: lightsteelblue;
  color: darkslateblue
  letter-spacing: .3px

header
  background-color #585285
  color: white
  padding: .5em 2em
  display: flex
  justify-content: space-between
  align-items: center;


  h1
    font-weight: normal
    margin: 0

  nav
    a
      margin: 0 .5em
      text-decoration: none
      color: white
      &:hover
        text-decoration: underline


main
  min-width 320px
  max-width 1200px
  margin: 0 auto
  padding: 1em


.resolutions
  font-size: 16px
  padding: 0

  li
    margin-bottom: .5rem
    list-style-type: none

    &.checked {
      color: gray;
    }

    input[type="checkbox"] {
      margin-right: .5em;
    }
    .completed {
      padding: .2em .5em
      background-color: lightgreen
      color: darkslategrey
      margin: 0 1em;
      border-radius: 6px
    }

    button {
      display: inline-block
      margin: 0 1em
    }
      

.route-enter, route-appear
  animation: slideIn 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

.route-leave
  animation: slideOut 0.4s cubic-bezier(0.165, 0.84, 0.44, 1)

.route-appear
  animation: slideUp 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)


.resolutionLoad-enter
  animation: slideIn 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)

.resolutionLead-leave
  animation: slideOut 0.4s cubic-bezier(0.165, 0.84, 0.44, 1)



@keyframes slideIn
  0%
    opacity 0
    transform translate3d(-50px, 0, 0)
  100%
    opacity 1
    transform translate3d(0, 0 ,0)

@keyframes slideOut
  0%
    opacity 1
    transform translate3d(0, 0, 0)
  100%
    opacity 0
    transform translate3d(50px, 0 ,0)

@keyframes slideUp
  0%
    opacity 0
    transform translate3d(0, 60px, 0)
  100%
    opacity 1
    transform translate3d(0, 0 ,0)