normalize-css()

body
  background-color: lightsteelblue;
  color: darkslateblue
  letter-spacing: .3px

header
  background-color #585285
  color: white
  padding: .5em 2em
  display: flex
  justify-content: space-between
  align-items: center;


  h1
    font-weight: normal
    margin: 0

  nav
    a
      margin: 0 .5em
      text-decoration: none
      color: white
      &:hover
        text-decoration: underline


main
  min-width 320px
  max-width 1200px
  margin: 0 auto
  padding: 1em


.resolutions
  font-size: 16px
  padding: 0

  li
    margin-bottom: .5rem
    list-style-type: none

    &.checked {
      color: gray;
    }

    input[type="checkbox"] {
      margin-right: .5em;
    }
    .completed {
      padding: .2em .5em
      background-color: lightgreen
      color: darkslategrey
      margin: 0 1em;
      border-radius: 6px
    }

    button {
      display: inline-block
      margin: 0 1em
    }